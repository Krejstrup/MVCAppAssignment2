@model Person
@*This partial view is displaying the Bootstrap version of a div-table*@
@*Typically called from Filter - showing one person with a header*@


<div class="row" id="@("per" + Model.Id)">
    <form asp-action="Create()" method="post">
        <div class="col-2">
            <label asp-for="@Model.FirstName"></label>
            <input asp-for="@Model.FirstName" disabled />
            <span asp-validation-for="@Model.FirstName"></span>
        </div>
        <div class="col-2">
            <label asp-for="@Model.LastName"></label>
            <input asp-for="@Model.LastName" disabled />
            <span asp-validation-for="@Model.LastName"></span>
        </div>
        <div class="col-2">
            <label asp-for="@Model.Phone"></label>
            <input asp-for="@Model.Phone" disabled />
            <span asp-validation-for="@Model.Phone"></span>
        </div>
        <div class="col-2">
            <label asp-for="@Model.InCity.Name"></label>
            <input asp-for="@Model.InCity.Name" disabled />
            <span asp-validation-for="@Model.InCity.Name"></span>
        </div>
        <div class="col-1">
            @Model.Id
        </div>
        <div class="col-1">
            <input asp-for="Id" type="button" onclick="EditPerson()" id="@("ed"+@Model.Id)" value="Edit" />
        </div>

    </form>
</div>


